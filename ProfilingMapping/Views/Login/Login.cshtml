@model ProfilingMapping.Models.SystemModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="sidenav">
        <div class="login-main-text">
            <h2>PROFILING AND<br> MAPPING</h2>
            <p>Login from here to access.</p>
        </div>
    </div>
    <div class="main">
        <div class="col-md-6 col-sm-12">
            <div class="login-form">
                @using (Html.BeginForm("Log_in", "Login", FormMethod.Post, new { @name = "LoginForm" }))
                {
                    <div class="form-group">
                        <label>User Name</label>
                        @Html.TextBoxFor(model => model.username, new { @id = "inputUsername", @class = "form-control", @placeholder = "Username", @type = "text" })
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        @Html.TextBoxFor(model => model.password, new { @id = "inputPassword", @class = "form-control", @placeholder = "Username", @type = "password" })
                    </div>
                    <br />
                    <button type="submit" class="btn btn-black">Login</button>
                }
                <br />
                <div class="alert alert-dismissible alert-danger @(ViewBag.ErrorMessage==""?"displayNone":"")">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>Error!</strong> @ViewBag.ErrorMessage.
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
